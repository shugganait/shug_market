<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ExpandedTitleTextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CollapsedTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProductInteractionButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableEnd">@drawable/ic_add_cart</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">32dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="android:text">@string/add_to_cart</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>